{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module Unit Results (snake_case)",
  "type": "object",
  "required": [
    "module_type",
    "unit",
    "year",
    "retrieved_at",
    "submodules",
    "totals"
  ],
  "properties": {
    "module_type": {
      "type": "string"
    },
    "unit": {
      "type": "string"
    },
    "year": {
      "type": "string",
      "pattern": "^[0-9]{4}$"
    },
    "retrieved_at": {
      "type": "string",
      "format": "date-time"
    },
    "submodules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "items",
          "summary"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "class": {
                  "type": "string"
                },
                "sub_class": {
                  "type": "string"
                },
                "act_usage": {
                  "type": "number",
                  "minimum": 0
                },
                "pas_usage": {
                  "type": "number",
                  "minimum": 0
                },
                "act_power": {
                  "type": "number",
                  "minimum": 0
                },
                "pas_power": {
                  "type": "number",
                  "minimum": 0
                },
                "kg_co2eq": {
                  "type": "number",
                  "minimum": 0
                }
              },
              "additionalProperties": false
            }
          },
          "summary": {
            "type": "object",
            "required": [
              "total_items",
              "annual_consumption_kwh",
              "total_kg_co2eq"
            ],
            "properties": {
              "total_items": {
                "type": "integer",
                "minimum": 0
              },
              "annual_consumption_kwh": {
                "type": "number",
                "minimum": 0
              },
              "total_kg_co2eq": {
                "type": "number",
                "minimum": 0
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "totals": {
      "type": "object",
      "required": [
        "total_submodules",
        "total_items",
        "total_annual_consumption_kwh",
        "total_kg_co2eq"
      ],
      "properties": {
        "total_submodules": {
          "type": "integer",
          "minimum": 0
        },
        "total_items": {
          "type": "integer",
          "minimum": 0
        },
        "total_annual_consumption_kwh": {
          "type": "number",
          "minimum": 0
        },
        "total_kg_co2eq": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}