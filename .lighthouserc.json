{
  "ci": {
    "collect": {
      "staticDistDir": "./frontend/dist/spa",
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "plugins": ["lighthouse-plugin-ecoindex-core"]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.8
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.7
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.9
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
