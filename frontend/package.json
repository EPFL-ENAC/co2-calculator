{
  "name": "co2-calculator",
  "version": "0.0.1",
  "description": "co2-calculator",
  "productName": "EPFL CO2 Calculator",
  "author": "Guilbert Pierre <pierre.guilbert@epfl.ch>",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,css,html,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,vue,scss,css,html,md,json}\" --ignore-path .gitignore",
    "test": "npm run test-ct && npm run test:e2e",
    "test:e2e": "playwright test tests/integration",
    "test:e2e:headed": "playwright test tests/integration --headed",
    "test:e2e:report": "playwright show-report",
    "test-ct": "playwright test -c playwright-ct.config.ts",
    "tokens:generate": "node scripts/generate-scss-tokens.mjs",
    "dev": "quasar dev",
    "preview": "npx vite preview --outDir dist/spa",
    "build": "quasar build"
  },
  "dependencies": {
    "@quasar/extras": "=1.17.0",
    "@quasar/quasar-app-extension-qmarkdown": "^2.0.5",
    "pinia": "=3.0.3",
    "quasar": "=2.18.5",
    "vue": "=3.5.22",
    "vue-i18n": "=11.1.12",
    "vue-router": "=4.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@intlify/unplugin-vue-i18n": "=11.0.1",
    "@playwright/experimental-ct-vue": "^1.56.1",
    "@playwright/test": "^1.56.1",
    "@quasar/app-vite": "=2.4.0",
    "@types/node": "=24.9.1",
    "@typescript-eslint/eslint-plugin": "=8.46.2",
    "@typescript-eslint/parser": "=8.46.2",
    "@vue/eslint-config-typescript": "^14.6.0",
    "autoprefixer": "^10.4.2",
    "eslint": "=9.38.0",
    "eslint-config-prettier": "=10.1.8",
    "eslint-plugin-vue": "=10.5.1",
    "postcss-html": "^1.8.0",
    "postcss-rtlcss": "^5.7.1",
    "prettier": "=3.6.2",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.3"
  },
  "type": "module",
  "engines": {
    "node": "=22",
    "npm": ">= 6.13.4"
  }
}
