[
  {
    "label": "Python: Flask",
    "adapter": "Debugpy",
    "request": "launch",
    "module": "app",
    "cwd": "$ZED_WORKTREE_ROOT",
    "env": {
      "FLASK_APP": "app",
      "FLASK_DEBUG": "1",
    },
    "args": [
      "run",
      "--reload", // Enables Flask reloader that watches for file changes
      "--debugger", // Enables Flask debugger
    ],
    "autoReload": {
      "enable": true,
    },
    "jinja": true,
    "justMyCode": true,
  },
  {
    "label": "Debug FastAPI (uv)",
    "adapter": "Debugpy",
    "request": "launch",
    "name": "Debug FastAPI (uv)",
    "program": "uv",
    "args": [
      "run",
      "uvicorn",
      "app.main:app",
      "--host",
      "0.0.0.0",
      "--port",
      "8000",
      "--log-level",
      "debug",
    ],
    "cwd": "backend",
    "envFile": "backend/.env",
    "autoReload": {
      "enable": true,
    },
    "jinja": false,
    "justMyCode": true,
  },
]
